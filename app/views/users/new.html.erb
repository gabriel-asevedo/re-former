<%= form_with(model: @user, method: :post, html: { "accept-charset": "UTF-8" }) do |form| %>
    <%= form_authenticity_token %>
  
    <div>
        <%= form.label :username, "Enter your username:" %><br>
        <%= form.text_field :username, placeholder: "Username"%>
        <% @user.errors.full_messages_for(:username).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>
    
    <div>
        <%= form.label :email %><br>
        <%= form.email_field :email,  placeholder: "example@example.com"%>
        <% @user.errors.full_messages_for(:email).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>
    
    <div>
        <%= form.label :password, "Enter your password:" %><br>
        <%= form.password_field :password, placeholder: "Password" %>
        <% @user.errors.full_messages_for(:password).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>
    
    <div>
        <%= form.submit %>
    </div>
<% end %>
